// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "buffer_font_size": 11,
    "theme": "Ros√© Pine Dawn",
    "buffer_font_family": "Fira Code",
    "vim_mode": false,
    "language_overrides": {
        "JavaScript": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "TypeScript": {
            "format_on_save": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        }
    },
    "journal": {
        "path": "~",
        "hour_format": "hour24"
    },
    "terminal": {
        "copy_on_select": true
    },
    "lsp": {
        "rust_analyzer": {
            "initialization_options": {
                "checkOnSave": {
                    "command": "clippy"
                }
            }
        }
    }
}
