// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Ros√© Pine Moon",
  "copilot": {
    "disabled_globs": [".env"]
  },
  "buffer_line_height": {
    "custom": 2
  },
  "buffer_font_size": 12,
  "buffer_font_family": "Dejavu Sans Mono",
  "buffer_font_features": {
    "calt": true
  },
  "features": {
    "copilot": false
  },
  "semantic_index": {
    "enabled": true
  },
  "assistant": {
    "default_open_ai_model": "gpt-3.5-turbo-0613"
  },
  "inlay_hints": {
    "enabled": false,
  },
  "vim_mode": false,
  "project_panel": {
    "dock": "left"
  },
  "language_overrides": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JSON": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "show_copilot_suggestions": true,
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "CSS": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "right",
    "default_width": 500
  },
  "lsp": {
    "rust_analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    }
  }
}
