{
  "theme": "Ros√© Pine Moon",
  "indent_guides": {
    "enabled": false
  },
  "when_closing_with_no_tabs": "keep_window_open",
  "task": {
    "show_status_indicator": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false
  },
  "ui_font_size": 13,
  "buffer_line_height": {
    "custom": 2.5
  },
  "buffer_font_size": 11,
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_features": {
    "calt": false,
    "liga": false
  },
  "assistant": {
    "provider": {
      "name": "openai"
    },
    "version": "1"
  },
  "inlay_hints": {
    "enabled": false
  },
  "project_panel": {
    "dock": "left"
  },
  "deno": {
    "enable": false
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "right",
    "default_width": 200,
    "line_height": {
      "custom": 1.0
    }
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "languages": {
    "GraphQL": {
      "formatter": "prettier"
    },
    "Svelte": {
      "formatter": "prettier"
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
      },
      // "language_servers": [
      //   "deno",
      // ],
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
      },
      "language_servers": ["deno", "tailwindcss-language-server"],
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },
    "eslint": {
      "enabled": true,
      "autoFixOnSave": true,
      "autoFixOnFormat": true,
      "autoFixOnFormatDelay": 200,
      "initialization_options": {
        "checkOnSave": {
          "command": "eslint"
        }
      },
      "probe": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "vue",
        "markdown",
        "svelte"
      ],
      "validate": ["javascript", "typescript", "javascriptreact", "svelte"]
    }
  }
}
